<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Confirm">
    <ImageView
        android:id="@+id/lastImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/food4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Congratulations! Your Order is Confirmed"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:textSize="40sp"
        android:layout_below="@+id/lastImage"
        android:textColor="#000000"
        android:textStyle="italic"
        android:fontFamily="@font/kingthings_petrock"
        />

</RelativeLayout>